<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cubivue.inlogic">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.cubivue.inlogic.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.cubivue.inlogic.ui.roomMapper.RoomMapperActivity"
            android:screenOrientation="portrait"
            android:label="Room Mapper"></activity>

        <activity
            android:name=".ui.rooms.RoomsActivity"
            android:screenOrientation="portrait"
            android:label="My Rooms"></activity>

        <activity
            android:name=".ui.locate.LocateActivity"
            android:screenOrientation="portrait"
            android:label="My Location"></activity>

        <activity
            android:name="com.cubivue.inlogic.ui.accessPoint.AccessPointActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>